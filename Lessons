<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Raluca Korean — Lecții</title>
  <link rel="stylesheet" href="css/style.css">
</head>

<body>
<div class="app">

  <!-- HEADER (identic ca stil, NU copy-paste logică JS) -->
  <div class="card headerCard">
    <h1>Lecții TOPIK</h1>
    <div class="sub">Gramatică · Exemple · Explicații</div>
  </div>

  <!-- SELECT TOPIK -->
  <div class="card">
    <label><b>Nivel</b></label>
    <select id="levelSelect">
      <option value="1">TOPIK 1</option>
      <option value="2">TOPIK 2</option>
      <option value="3">TOPIK 3</option>
      <option value="4">TOPIK 4</option>
    </select>
  </div>

  <!-- LISTĂ LECȚII -->
  <div class="card" id="lessonList"></div>

  <!-- CONȚINUT LECȚIE -->
  <div class="card" id="lessonContent" style="display:none"></div>

</div>

<script>const DATA_LESSONS = {
  1: [
    {
      title: "은 / 는 – topic",
      content: `
        <p><b>은 / 는</b> marchează tema propoziției.</p>
        <p>저는 학생이에요.</p>
      `
    }
  ],
  2: [
    {
      title: "에 vs 에서",
      content: `
        <p><b>에</b> = locație statică</p>
        <p><b>에서</b> = acțiune</p>
      `
    }
  ]
};

const levelSelect = document.getElementById("levelSelect");
const list = document.getElementById("lessonList");
const content = document.getElementById("lessonContent");

function renderLessons(level){
  list.innerHTML = "";
  content.style.display = "none";

  DATA_LESSONS[level].forEach((l, i)=>{
    const btn = document.createElement("div");
    btn.className = "answer";
    btn.textContent = l.title;
    btn.onclick = ()=>{
      content.innerHTML = `<h2>${l.title}</h2>${l.content}`;
      content.style.display = "block";
    };
    list.appendChild(btn);
  });
}

levelSelect.onchange = ()=>renderLessons(levelSelect.value);
renderLessons("1");
</script>
</body>
</html>
